<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Hello World!"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        app:layout_constraintRight_toRightOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <cn.edu.xjtlu.testapp.CanvasView
        android:id="@+id/canvasView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/button_group_left_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/button_group_margin"
        android:layout_marginTop="@dimen/button_group_margin"
        android:visibility="invisible">

        <Button
            android:id="@+id/campusBtn"
            style="@style/FunctionButton"
            android:text="@string/icon_map"
            android:layout_marginBottom="@dimen/button_margin"
            tools:ignore="SpUsage">
        </Button>

        <TextView
            android:id="@+id/codeTextView"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/spinner_height"
            android:background="@drawable/code_text_view"
            android:textColor="@color/bs_secondary"
            android:gravity="center"
            android:textSize="@dimen/floor_info_text_size"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/floorSpinner"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/spinner_height"
            android:background="@drawable/floor_spinner"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/floor_info_text_size"
            android:textStyle="bold"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="@dimen/spinner_height"
            android:dropDownHeight="300dp"
            android:popupBackground="@color/white" />
    </LinearLayout>
</RelativeLayout>